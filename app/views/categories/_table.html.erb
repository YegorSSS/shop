<% @goods.each do |good| %>
<div class="product-table">
            <h2><a href="/goods/<%= good.id %>"><%= good.name %></a></h2>
            <div class="product-table-img-main">
                <div class="product-table-img">
                    <a href="/goods/<%= good.id %>"><img src="/assets/<%= good.img %>" alt="" /></a>                 
                    <div>
                      	<% if good.fresh %>
                        <img src="/assets/ico-cat-new.png" alt="новинка" />
                        <% end %>
                        <% if good.hits %>
                        <img src="/assets/ico-cat-lider.png" alt="популярный" />
                        <% end %>
                        <% if good.sale %>
                        <img src="/assets/ico-cat-sale.png" alt="распродажа" />
                        <% end %>						
                    </div>
                </div>
            </div>    
	<p class="cat-table-more"><a href="/goods/<%= good.id %>">подробнее...</a></p>
    <% if good.presence %>
        <div>
            <p>Цена :  <span><%= good.price %> грн.</span></p>
	       <a class='basket_link' href="/sessions/basket?good_id=<%= good.id %>"><img class="addtocard-index" src="/assets/addcard-table.jpg" alt="Добавить в корзину" /></a>
        </div>
    <% else %>
        <div>
            <p><span>Нет в наличии</span></p>
           <img class="addtocard-index" src="/assets/addcard-table.jpg" alt="Добавить в корзину" />
        </div>
    <% end %>
</div>
<% end %>