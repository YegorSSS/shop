<% provide(:title, @title) %>

<div class="kroshka">
          <a href="/">Главная</a> / <span><%= @title %></span>
</div>
<div class="content-txt">
        	<div class="catalog-index">
				<h1><%= @title %></h1>
<% if @goods.count < 1 %>
					<p>Товаров пока нет</p>
	<% else %>
	<div class='digg_pagination'>
	<%= will_paginate(@goods) %>
	</div>
		<% @goods.each do |good| %>
				<div class="product-index">
					<h2><a href="/goods/<%= good.id %>"><%= good.name %></a></h2>
					<a href="/goods/<%= good.id %>"><img src="/assets/<%= good.img %>" alt="" /></a>
					<div>
                      <% if good.fresh %>
                      <img src="/assets/ico-det-new.jpg" alt="новинка" />
                      <% end %>
                      <% if good.hits %>
                      <img src="/assets/ico-det-lider.jpg" alt="популярный" />
                      <% end %>
                      <% if good.sale %>
                      <img src="/assets/ico-det-sale.jpg" alt="распродажа" />
                      <% end %>						
                    </div>
					<p>Цена:  <span><%= good.price %>  грн.</span></p>
					<a class='basket_link' href="/sessions/basket?good_id=<%= good.id %>"><img class="addtocard-index" src="/assets/addcard-index.jpg" alt="Добавить в корзину" /></a>
				</div>
		<% end %>
<% end %>
<div style='clear:both'></div>
	<div class='digg_pagination'>
	<%= will_paginate(@goods) %>
	</div>
               
            </div>   
</div>